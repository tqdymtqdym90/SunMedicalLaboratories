{
  "extends": ["html-validate:recommended"],
  "rules": {
    "void-style": "omit",
    "close-order": "error",
    "doctype-html": "error",
    "element-required-attributes": "error",
    "no-dup-attr": "error",
    "no-dup-id": "error",
    "no-missing-references": "error",
    "no-unknown-elements": "error",
    "require-sri": "off",
    "script-type": "off",
    "svg-focusable": "error",
    "wcag/h30": "error",
    "wcag/h32": "error",
    "wcag/h36": "error",
    "wcag/h37": "error",
    "wcag/h67": "error",
    "wcag/h71": "error",
    "attribute-boolean-style": "error",
    "attribute-empty-style": "error",
    "class-pattern": "off",
    "id-pattern": "off",
    "input-missing-label": "error",
    "meta-refresh": "error",
    "no-autoplay": "error",
    "no-deprecated-attr": "error",
    "no-inline-style": "off",
    "no-redundant-for": "error",
    "no-redundant-role": "error",
    "no-style-tag": "off",
    "no-trailing-whitespace": "error",
    "prefer-button": "error",
    "prefer-native-element": "error",
    "prefer-tbody": "error",
    "require-csp-nonce": "off",
    "tel-non-breaking": "error",
    "text-content": "error"
  },
  "elements": [
    "html5"
  ],
  "plugins": [],
  "transform": {
    "^.*\\.html$": "html-validate:document"
  }
}
